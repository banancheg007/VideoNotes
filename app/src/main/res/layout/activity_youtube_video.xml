<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.YoutubeVideoActivity">
    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:background="@drawable/myrect"
    />



    <RelativeLayout
            android:id="@+id/video_player_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:paddingStart="6dp"
                android:id="@+id/loading_progressBar"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:progressTint="#C6FFFFFF"
                android:progressBackgroundTint="#000000"/>
        <RelativeLayout
                android:id="@+id/custom_ui"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
            <ImageView
                    android:id="@+id/video_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3C000000"
                    android:layout_marginBottom="8dp"
            />

            <ImageButton
                    android:id="@+id/pause_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_play_arrow"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="?android:selectableItemBackground"
                    android:padding="3dp"
            />
            <TextView
                    android:id="@+id/current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:layout_above="@+id/video_seekBar"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="12dp"/>
            <TextView
                    android:id="@+id/video_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:layout_above="@+id/video_seekBar"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="12dp"/>
            <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/video_seekBar"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:layout_alignParentBottom="true"
                    android:progressTint="@color/accent"
                    android:thumbTint="@color/accent"
                    android:progressBackgroundTint="#3C000000"
            />
        </RelativeLayout>
        <ImageView
                android:id="@+id/start_line"
                android:layout_width="7dp"
                android:layout_height="2dp"
                android:background="@color/accent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="8dp"
        />
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:id="@+id/video_progressBar"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:progressTint="@color/accent"
                android:progressBackgroundTint="#3C000000"/>

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/notes_list_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/marks_rl"
    />
    <RelativeLayout
            android:id="@+id/marks_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/youtube_player_view">
    </RelativeLayout>

    <ProgressBar
            android:id="@+id/player_loading_indicator"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:indeterminateTint="@color/accent"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/fab_margin"
            app:backgroundTint="@color/accent"
            app:srcCompat="@drawable/ic_action_add"/>
</RelativeLayout>